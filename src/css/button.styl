/* CSS */
// .btn 為預設樣式，如果已有button元件可直接改用button並移除此
.btn
  font-size 16px
  font-weight 400
  letter-spacing 0.05em
  color white
  position relative
  display inline-block
  text-align center
  user-select none
  padding 8px 16px
  border 1px solid transparent
  // background-color black
  line-height 1.5
  transition all 0.5s ease
  border-radius 32px
  cursor pointer
  white-space nowrap
  height fit-content
  &.is-icon
    display flex
    align-items center
    justify-content center
    gap 8px
/* btn 動態 無用到可隱藏*/
// 閃線調
.btn-light-slide
  transition 0.5s
  background-size 200% auto
  box-shadow 0px 0px 14px -7px #f09819 // change color
  background-image linear-gradient(45deg, #FF512F 0%, #F09819  51%, #FF512F  100%) // change color
  touch-action manipulation
  &:hover
    background-position: right center   /* change the direction of the change here */
    color: #fff
    text-decoration: none
  &:active
    transform scale(0.95)
// 向右填滿
.btn-slide
  color #0d72cf
  background none
  box-shadow 0 0 0 1px #0d72cf inset
  overflow hidden
  transition box-shadow 0.35s ease-in-out, background 0.35s ease-in-out, color 0.35s ease-in-out
  &:before
    content ''
    position absolute
    top 0
    left 0
    transform: translateX(-100%)
    background-color #0d72cf
    width 100%
    height 100%
    transition 0.35s ease-in-out
    z-index -1
  &:hover
    color white
    &:before
      transform: translateX(0)
//圓線條填滿
.btn-rounded-slide
  color #313435
  position relative
  overflow hidden
  transition all .35s
  z-index 1
  &::after
    content ''
    position absolute
    bottom 0
    left 0
    width 100%
    height 100%
    background-color rgb(176, 226, 226)
    border-radius 10rem
    z-index -2
  &:before
    content ''
    position absolute
    bottom 0
    left 0
    width 0%
    height 100%
    background-color #0a4757 //圓線顏色
    transition all .3s
    border-radius 10rem
    z-index -1
  &:hover
    color: #fff; // 字顏色
    &:before
      width: 100%;


.btn-cursor
  position relative
  color rgb(15, 15, 15)
  // z-index -1
  overflow hidden
  .btn-circle
    position absolute
    display block
    width 0
    height 0
    border-radius 50%
    background-color #23410b
    transition: width 0.35s ease-in-out, height 0.35s ease-in-out;
    transform translate(-50%, -50%)
    z-index -1
  &:hover
    color #fff
    outline-width: 0
    .btn-circle
      background-color #000
      width 200%
      height calc(200% * 1.5)
.btn-icon
  cursor pointer
  position relative
  width 40px
  height 40px
  display flex
  justify-content center
  align-items center
  border-radius 999px
  overflow hidden
  &:before, &:after
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition all 0.35s ease
    border-radius 999px
  & .icon-svg
    position relative
    z-index 1
    transition all 0.35s ease
  &.is-fill
    &:before
      transition-duration 0.35s
      box-shadow inset 0 0 0 1px #00B9EF
    &:hover:before
      box-shadow inset 0 0 0 40px #00B9EF
    &:hover .icon-svg
      color #fff
  &.is-expand
    &:after
      box-shadow inset 0 0 0 1px #00B9EF
    &:before
      box-shadow inset 0 0 0 40px #00B9EF
    &:hover:before
      box-shadow inset 0 0 0 1px #00B9EF





