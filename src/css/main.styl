// --- swiper輪播修改預設設定----
.swiper
  .swiper-button-next,.swiper-button-prev
    &::after 
      content: ''
  .swiper-pagination
    .swiper-pagination-bullet
      flex-basis 300px
      height 2px
      border-radius 0
      position relative
      overflow hidden
      opacity 1
      bottom 0px //輪播的距離
      &::before 
        content ""
        display block
        position absolute
        background: #E0E5F1
        top 0
        right 0
        bottom 0
        left 0
    .swiper-pagination-bullet-active 
      background: #E0E5F1
      &::before 
        background-color: #C70067
        animation: slide-progress 5s linear forwards;
  &.swiper-paused
    .swiper-pagination-bullet-active 
      &::before 
        animation-play-state paused
@keyframes slide-progress 
	0% 
		transform: translateX(-100%);
	100% 
		transform: translateX(0);
    
.form-input
  &.error
    border-color: red;
  &:focus, &.error
    &+.valid-message-box
      max-height: 100px;
.valid-message-box
  overflow: hidden;
  transition: max-height 1s;
  max-height: 0;

.iframe-youtube.is-active
